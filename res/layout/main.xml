<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent">
	<com.qq.worldwind.android.layer.DragListView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tlv="http://schemas.android.com/apk/res/com.qq.worldwind.android"
		android:layout_alignParentTop="true"
		android:id="@android:id/list" android:layout_width="match_parent"
		android:layout_height="match_parent" android:drawSelectorOnTop="false"
		tlv:normal_height="38dip" tlv:grabber="@+id/icon" tlv:remove_mode="trash"
		tlv:grabber_alignment="right" />
	<ImageView android:layout_width="wrap_content" android:id="@+id/removeView"
		android:src="@drawable/trashcan" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true" android:visibility="invisible" android:layout_centerHorizontal="true"></ImageView>
</RelativeLayout>