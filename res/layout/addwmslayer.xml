<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:orientation="vertical">
	<TableLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:stretchColumns="1" android:shrinkColumns="1">
		<TableRow>
			<TextView android:text="WMS URL:" android:id="@+id/textView1"></TextView>
			<EditText android:id="@+id/wmsURL" android:text=""
				android:layout_column="1"></EditText>
			<Button android:text="Get Capabilities" android:id="@+id/downloadCapabilitesButton"></Button>
		</TableRow>
	</TableLayout>
	<ListView android:id="@+id/layerInfoList"
		android:layout_width="match_parent" android:layout_height="wrap_content">
	</ListView>
</LinearLayout>
